# ─── ColorGG Environment Variables ───────────────────────────
# Copy this file to .env and fill in the values

# REQUIRED: Dashboard login password (pick something strong)
DASHBOARD_PASSWORD=your_secure_password_here

# REQUIRED: Discord bot token
BOT_TOKEN=your_discord_bot_token_here

# OPTIONAL: Auto-start bot when server launches (set to "true" for always-on)
AUTO_START=true

# OPTIONAL: Pollinations AI API key (default provided)
POLLINATIONS_KEY=pk_74dZ9pYlU7ufjX7O

# OPTIONAL: JWT secret for sessions (auto-generated if not set, but sessions reset on restart)
# JWT_SECRET=random_64_char_string_here

# OPTIONAL: Session duration in hours (default: 24)
# SESSION_HOURS=24

# OPTIONAL: Server port (default: 3000, Railway sets this automatically)
# PORT=3000

# OPTIONAL: Set to "production" for secure cookies (Railway sets this)
# NODE_ENV=production
